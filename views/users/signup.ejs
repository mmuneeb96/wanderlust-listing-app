<% layout('layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp for Wanderlust</h1>
    <div class="col-6 offset-3"> 
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input placeholder="enter username" name="username" class="form-control" type="text" id="username" required>
                <div class="invalid-feedback">Please provide a valid username.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input placeholder="enter email" name="email" class="form-control" type="email" id="email" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input placeholder="enter password" name="password" class="form-control" type="password" id="password" required>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>

    </div>
</div>        